<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <RootNamespace>MSFSTouchPortalPlugin</RootNamespace>
    <Version>1.0.0.0</Version>
    <Platforms>x64</Platforms>
    <OutputPath>..\build\$(Platform)-$(Configuration)\</OutputPath>
    <AnalysisLevel>5.0</AnalysisLevel>
    <Configurations>Debug;Release;Publish</Configurations>
    <Copyright>Copyright Tim Lewis, Maxim Paperno, and project contributors; All rights reserved.</Copyright>
    <PackageProjectUrl>https://github.com/mpaperno/MSFSTouchPortalPlugin</PackageProjectUrl>
    <DocumentationUrl>https://github.com/mpaperno/MSFSTouchPortalPlugin/wiki</DocumentationUrl>
    <RepositoryUrl>https://github.com/mpaperno/MSFSTouchPortalPlugin.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>GPLv3</PackageLicenseExpression>
    <Description>A plugin which provides a two-way interface between Touch Portal clients and Flight Simulators which use SimConnect.</Description>
    <Authors>Tim Lewis, Maxim Paperno, and project contributors</Authors>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
    <PlatformTarget>x64</PlatformTarget>
    <DefineConstants>DEBUG;TRACE;DEBUG_REQUESTS</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="('$(Configuration)'=='Release' Or '$(Configuration)'=='Publish') And '$(Platform)'=='x64'">
    <PlatformTarget>x64</PlatformTarget>
    <NoWarn>1701;1702</NoWarn>
    <AllowedReferenceRelatedFileExtensions>
      <!-- Prevent .pdb, .xml, etc from being copied to output folder -->
      .dll
    </AllowedReferenceRelatedFileExtensions>
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
    <DefineConstants />
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Publish|x64'">
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <SelfContained>true</SelfContained>
    <PublishTrimmed>True</PublishTrimmed>
    <TrimMode>copyused</TrimMode>
    <PublishSingleFile>False</PublishSingleFile>
    <PublishReadyToRun>False</PublishReadyToRun>
  </PropertyGroup>

  <!-- required for trimming otherwise we get missing dependencies at runtime -->
  <ItemGroup>
    <TrimmerRootAssembly Include="mscorlib" />
    <TrimmerRootAssembly Include="netstandard" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <!--<AdditionalFiles Include="..\.sonarlint\msfstouchportalplugin\CSharp\SonarLint.xml" Link="SonarLint.xml" />-->
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="6.0.1" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="Serilog.Extensions.Logging" Version="3.1.0" />
    <PackageReference Include="Serilog.Settings.Configuration" Version="3.3.0" />
    <PackageReference Include="Serilog.Sinks.Async" Version="1.5.0" />
    <PackageReference Include="Serilog.Sinks.Console" Version="4.0.1" />
    <PackageReference Include="Serilog.Sinks.File" Version="5.0.0" />
    <PackageReference Include="sqlite-net-pcl" Version="1.8.116" />
  </ItemGroup>

  <!-- SimConnect libs -->
  <ItemGroup>
    <Reference Include="Microsoft.FlightSimulator.SimConnect">
      <HintPath>.\lib\Microsoft.FlightSimulator.SimConnect.dll</HintPath>
      <EmbedInteropTypes>false</EmbedInteropTypes>
      <Private>true</Private>
    </Reference>
    <ContentWithTargetPath Include=".\lib\SimConnect.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <TargetPath>SimConnect.dll</TargetPath>
    </ContentWithTargetPath>
  </ItemGroup>

  <!-- TouchPortal API lib -->
  <ItemGroup>
    <Reference Include="TouchPortalSDK, Culture=neutral, processorArchitecture=MSIL">
      <HintPath>.\lib\TouchPortalSDK\TouchPortalSDK.dll</HintPath>
      <Private>true</Private>
      <EmbedInteropTypes>false</EmbedInteropTypes>
    </Reference>
    <!--<PackageReference Include="TouchPortal-CS-API" Version="1.44.2" />-->
  </ItemGroup>

  <!-- Custom SharpConfig lib -->
  <ItemGroup>
    <Reference Include="SharpConfig, Culture=neutral, processorArchitecture=MSIL">
      <HintPath>.\lib\SharpConfig\SharpConfig.dll</HintPath>
      <Private>true</Private>
      <EmbedInteropTypes>false</EmbedInteropTypes>
    </Reference>
    <!--<PackageReference Include="SharpConfig" Version="3.2.9.1" />-->
  </ItemGroup>

  <!-- WASimCommander Client -->
  <ItemGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64'">
    <Reference Include="WASimCommander.WASimClient, Culture=neutral, processorArchitecture=MSIL">
      <HintPath>.\lib\WASimCommander\WASimCommander.WASimClient.dll</HintPath>
      <Private>true</Private>
      <EmbedInteropTypes>false</EmbedInteropTypes>
    </Reference>
  </ItemGroup>
  <ItemGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
    <Reference Include="WASimCommander.WASimClient_d, Culture=neutral, processorArchitecture=MSIL">
      <HintPath>.\lib\WASimCommander\WASimCommander.WASimClient_d.dll</HintPath>
      <Private>true</Private>
      <EmbedInteropTypes>false</EmbedInteropTypes>
    </Reference>
  </ItemGroup>
  <ItemGroup>
    <ContentWithTargetPath Include=".\lib\WASimCommander\Ijwhost.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <TargetPath>Ijwhost.dll</TargetPath>
    </ContentWithTargetPath>
    <ContentWithTargetPath Include=".\lib\WASimCommander\client_conf.ini">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <TargetPath>client_conf.ini</TargetPath>
    </ContentWithTargetPath>
  </ItemGroup>

  <!-- Config files to copy to output -->
  <ItemGroup>
    <None Update="Configuration\PluginStates.ini">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Configuration\States.ini">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Configuration\SimVariables.ini">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Configuration\SimEvents.ini">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Configuration\SimConnect.cfg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Configuration\HubHop\hubhop_presets.sqlite3">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
